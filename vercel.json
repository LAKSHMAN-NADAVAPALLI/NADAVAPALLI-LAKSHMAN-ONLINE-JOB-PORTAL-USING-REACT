{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"  // Ensures the React build folder is used
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"  // API requests are routed to the serverless function
    },
    {
      "src": "/(.*)",
      "dest": "/build/$1"  // All other requests go to the React app's build folder
    }
  ]
}
